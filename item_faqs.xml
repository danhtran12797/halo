<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16"
    tools:ignore="WebViewLayout">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_add"
        android:layout_marginEnd="@dimen/_8"
        app:lineHeight="@dimen/_22"
        tools:text="1. How to Set up an offshore company - International Business Registration"
        android:textSize="@dimen/text_size_big"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/see_all_button_text"
        android:layout_width="@dimen/_0"
        android:layout_height="wrap_content"/>
    <WebView
        android:id="@+id/contentWebView"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:layout_marginTop="@dimen/_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_add"
        android:src="@drawable/ic_plus_faqs"
        app:layout_constraintTop_toTopOf="@+id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtTitle"
        android:layout_width="@dimen/_30"
        android:layout_height="@dimen/_30"/>
</androidx.constraintlayout.widget.ConstraintLayout>
